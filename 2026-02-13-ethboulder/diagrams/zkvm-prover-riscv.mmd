flowchart LR
    classDef io fill:#2e3444,stroke:#3fc5dd,color:#e0e0e0
    classDef proc fill:#3fc5dd,stroke:#1d4ed8,color:#181e26
    classDef proof fill:#22c55e,stroke:#16a34a,color:#181e26

    subgraph Physical["Physical Machine"]
        direction LR
        In["In = block, pre-state roots"]:::io --> Program["EVM implementation"]:::proc
        subgraph Prover["zkVM Prover"]
            subgraph VM["RISC-V VM"]
                Program
            end
        end
        Program --> Out["Out = post-state roots"]:::io
        Prover --> Proof:::proof
    end

    style Physical fill:none,stroke:#9ca3af,color:#e0e0e0
    style Prover fill:none,stroke:#3fc5dd,color:#e0e0e0
    style VM fill:none,stroke:#9ca3af,color:#e0e0e0
